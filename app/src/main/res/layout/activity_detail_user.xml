<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/myCoordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".User.Pelamar.Main.DetailUserAct"
            android:background="@color/blueBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="315dp"
                        android:background="@drawable/background_utama"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:orientation="vertical"
                        android:background="@drawable/background_rounded34">

                        <TextView
                            android:id="@+id/txt_nama_pekerjaan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:text="Account Manager"
                            android:textSize="16sp"
                            android:textColor="@color/bluePrimary"
                            android:fontFamily="@font/mmedium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/txt_id_loker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:layout_marginStart="24dp"
                                android:text="1"
                                android:textSize="14sp"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/mmedium" />

                            <TextView
                                android:id="@+id/txt_perusahaan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="24dp"
                                android:text="PT. Media Antar Nusa"
                                android:textSize="14sp"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/mmedium" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_kota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:text="Medan"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/mregular" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_tanggal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="5dp"
                                android:text="21-09-2021"
                                android:textSize="14sp"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/mregular" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:background="@drawable/background_line"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:text="Job Descriptions"
                            android:textSize="16sp"
                            android:textColor="@color/bluePrimary"
                            android:fontFamily="@font/mmedium" />

                        <TextView
                            android:id="@+id/txt_jobdesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="50dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="5dp"
                            android:text="Isi Deskripsi Setiap Loker"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/mregular" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="vertical"
                    android:background="@drawable/background_rounded34">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="12dp"
                            android:text="USER ID :"
                            android:textSize="16sp"
                            android:textColor="@color/bluePrimary"
                            android:fontFamily="@font/mregular"/>

                        <TextView
                            android:id="@+id/txt_id_pelamar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="24dp"
                            android:text="1"
                            android:textSize="16sp"
                            android:textColor="@color/bluePrimary"
                            android:fontFamily="@font/mregular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/mregular"
                            android:text="NAMA    :"
                            android:textColor="@color/bluePrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_nama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="24dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/mregular"
                            android:text="NAMA"
                            android:textColor="@color/bluePrimary"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_kirim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:text="Kirim Lamaran"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/mmedium"
                        android:background="@drawable/background_btn_blue"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/show_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="invisible">

                    <ProgressBar
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="14dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="24dp"
                        android:gravity="center"
                        android:text="Please Wait..."/>

                </LinearLayout>

            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </ScrollView>

</layout>