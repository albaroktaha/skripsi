<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/myCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".User.Pelamar.Main.DetailUserAct"
        android:background="@color/blueBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="315dp"
                    android:background="@drawable/background_utama"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="vertical"
                    android:background="@drawable/background_rounded34">

                    <TextView
                        android:id="@+id/txt_nama_pekerjaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:text="Account Manager"
                        android:textSize="16sp"
                        android:textColor="@color/bluePrimary"
                        android:fontFamily="@font/mmedium" />

                    <TextView
                        android:id="@+id/txt_perusahaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:text="PT. Media Antar Nusa"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/mmedium" />

                    <TextView
                        android:id="@+id/txt_kota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:text="Medan"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/mregular" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_tanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:text="21-09-2021"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/mregular" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/background_line"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:text="Job Descriptions"
                        android:textSize="16sp"
                        android:textColor="@color/bluePrimary"
                        android:fontFamily="@font/mmedium" />

                    <TextView
                        android:id="@+id/txt_jobdesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="5dp"
                        android:text="Isi Deskripsi Setiap Loker"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/mregular" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>